{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block main_container %}
	<div class="col-md-12 my-5">
		<h1 class="display-3">{{ post.title }}</h1>
		<hr>
		<h6>{{ post.date ? post.Date|date('Y-m-d') : '' }}</h6>
		<br>
		{{ post.text |raw }}
		<hr>
		Tags:
		{% for tag in post.tags %}
			<a href="{{ path("public_site_tag", {'tag': tag.title}) }}" class="badge badge-dark">{{ tag.title }}</a>
		{% else %}
			Aucun tag
		{% endfor %}
		<hr>
		{% for comment in comments %}
			<h1 style="padding: 10px">Commentaires</h1>
			<p>{{comment.value}}</p>
			{{ comment.date|date('Y-m-d') }}
		{% else %}
			Aucun commentaire
		{% endfor %}
		<hr>
		{% if app.user %}
			{{ include('posts/_form.html.twig') }}
		{% endif %}
	</div>
{% endblock %}
